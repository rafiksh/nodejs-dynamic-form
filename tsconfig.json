{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "&db/*": ["src/db/*"],
      "&config/*": ["src/config/*"],
      "&routes/*": ["src/routes/*"],
      "&routers/*": ["src/routers/*"],
      "&validation/*": ["src/validation/*"],
      "&middlewares/*": ["src/middlewares/*"],
      "&controllers/*": ["src/controllers/*"],
      "&services/*": ["src/services/*"]
    }
  },
}
